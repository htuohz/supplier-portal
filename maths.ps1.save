do {
    Write-Host "==============================="
    Write-Host " Simple PowerShell Calculator"
    Write-Host "==============================="
    Write-Host "1. Add"
    Write-Host "2. Subtract"
    Write-Host "3. Multiply"
    Write-Host "4. Divide"
    Write-Host "5. Exit"
    $choice = Read-Host "Select an operation (1-5)"

    if ($choice -eq 5) {
        Write-Host "Goodbye!"
        break
    }

    $num1 = Read-Host "Enter first number"
    $num2 = Read-Host "Enter second number"

    if (-not ($num1 -as [double]) -or -not ($num2 -as [double])) {
        Write-Host "Invalid input. Please enter numeric values."
        continue
    }

    $num1 = [double]$num1
    $num2 = [double]$num2

    switch ($choice) {
        1 { $result = $num1 + $num2; Write-Host "Result: $result" }
        2 { $result = $num1 - $num2; Write-Host "Result: $result" }
        3 { $result = $num1 * $num2; Write-Host "Result: $result" }
        4 {
            if ($num2 -eq 0) {
                Write-Host "Error: Cannot divide by zero"
            } else {
                $result = $num1 / $num2
                Write-Host "Result: $result"
            }
        }
        Default { Write-Host "Invalid choice. Please enter 1-5." }
    }

} while ($true)

